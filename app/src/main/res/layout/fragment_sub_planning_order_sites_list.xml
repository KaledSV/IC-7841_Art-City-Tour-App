<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filaListSitioPlan1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SubPlanningOrderSitesListFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view"
        app:layout_constraintVertical_bias="0">

        <Button
            android:id="@+id/btn_planning_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_outline"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="Cancelar"
            android:textColor="@color/positive_400"
            android:layout_marginEnd="50dp"/>

        <Button
            android:id="@+id/btn_planning_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_outline"
            android:backgroundTint="@color/positive_400"
            android:fontFamily="@font/roboto_bold"
            android:text="Guardar"
            android:textColor="@color/white" />
    </LinearLayout>


